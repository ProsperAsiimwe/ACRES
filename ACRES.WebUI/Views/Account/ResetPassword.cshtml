@model ACRES.WebUI.Models.Account.ResetPasswordViewModel
@{
    ViewBag.Title = Model.Verb + " your password";
    Layout = "~/Views/Shared/_Console.cshtml";
    string companyName = Settings.COMPANY_NAME;
}

<!-- Login 5 start -->
<div class="login-5">
    <div class="container">
        <div class="row login-box">
            <div class="col-lg-6 col-md-12 col-pad-0 bg-img none-992">
                <a href="#">
                    <img src="~/Content/coreAssets/images/logos/logoTransp.png" class="logo" alt="logo" style="max-width:80px;height:100px">
                </a>
                <h3>Reset Password</h3>
                <p>@Settings.COMPANY_NAME</p>
                @*<a href="register-5.html" class="btn-outline">Register</a>
                    <ul class="social-list clearfix">
                        <li><a href="#" class="facebook-bg"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#" class="twitter-bg"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#" class="google-bg"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#" class="linkedin-bg"><i class="fa fa-linkedin"></i></a></li>
                    </ul>*@
            </div>
            <div class="col-lg-6 col-md-12 col-pad-0 align-self-center">
                <div class="login-inner-form">
                    <div class="details">
                        <h3>Enter your email address and a new password into the form below and click @Model.Verb Password to apply changes</h3>

                      @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                           
                            @Html.Bootstrap().TextBoxFor(m => m.Email).Placeholder("Enter your email address").ShowValidationMessage(true).HtmlAttributes(new { type = "email", required = "" })

                            <div class="clear"></div>
                        </div>

                        <div class="form-group">
                            
                            @Html.Bootstrap().PasswordFor(m => m.Password).Placeholder("Enter new password").HtmlAttributes(new { autocomplete = "off", type = "password", required = "" }).ShowValidationMessage(true)

                            <div class="clear"></div>
                        </div>

                        <div class="form-group">
                            
                            @Html.Bootstrap().PasswordFor(m => m.ConfirmPassword).Placeholder("Confirm new password").HtmlAttributes(new { autocomplete = "off", type = "password", required = "" }).ShowValidationMessage(true)

                            <div class="clear"></div>
                        </div>

                        <div class="form-group">
                            @Html.Bootstrap().SubmitButton().ButtonBlock().Text(Model.Verb + " Password").Class("btn btn-primary account-btn")
                        </div>

                      }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login 5 end -->





