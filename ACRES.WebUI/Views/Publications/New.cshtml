                        </div>
                    </div>
                    <div class="col-12">
                        <div class="contact-form-style mb-20">
                            @Html.Bootstrap().TextBoxFor(p => p.Title).Placeholder().Class("default-input").Label().HtmlAttributes(new { style = "color:white;" })
