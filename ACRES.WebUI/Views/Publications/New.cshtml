@model ACRES.WebUI.Models.Publications.PublicationViewModel
@{
    ViewBag.Title = "NEW PUBLICATIONS";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = PageData["isAdmin"];
    string action, cancel_url, buttonText, instr, glyph;    
    string roleName = PageData["roleName"];
    string roleTitle = PageData["roleTitle"];

    if (Model.PublicationId > 0)
    {
        cancel_url = Url.Action("Show", new { PublicationId = Model.PublicationId });
        action = "Update";
        buttonText = "Update Publication";
        instr = "Modify the details and click Update to apply changes";
        glyph = "glyphicon glyphicon-thumbs-up";
        ViewBag.Title = "Update Publication";
    }
    else
    {
        cancel_url = Url.Action("Index");
        action = "Create";
        buttonText = "Create Publication";
        instr = "Complete the form below and click Create to create a new Publication";
        glyph = "glyphicon glyphicon-plus";
        ViewBag.Title = "Create Publication";
    }
}

<!--Breadcrumb Banner Area Start-->
<div class="breadcrumb-banner-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text">
                    <h1 class="text-center">@ViewBag.Title</h1>
                    <div class="breadcrumb-bar">
                        <ul class="breadcrumb text-center">
                            <li>@Html.Bootstrap().ActionLink("PUBLICATIONS", "Index", "Publications") </li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Breadcrumb Banner Area-->


                <!--Contact Area Start-->
<div class="contact-area pt-100 pb-100">
    <div class="container">
        <div class="row no-gutters">

            @using (Html.Bootstrap().Begin(new Form(action, "Publications").FormMethod(FormMethod.Post).HtmlAttributes(new { enctype = "multipart/form-data" })))
             {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(p => p.PublicationId)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

              
            <div class="col-md-12 col-lg-12 ">
