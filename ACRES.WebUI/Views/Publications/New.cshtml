                    </div>
                    <div class="col-12">
                        <div class="contact-form-style mb-20">
                            @Html.Bootstrap().TextBoxFor(m => m.SplitPage).Placeholder().HtmlAttributes(new { type = "number" }).Class("default-input").Label().HtmlAttributes(new { style = "color:white;" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="contact-form-style">
                            <button class="default-button" type="submit">@buttonText <i class=@glyph></i></button>
