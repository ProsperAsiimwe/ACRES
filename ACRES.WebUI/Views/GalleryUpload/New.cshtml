@model ACRES.WebUI.Models.GalleryUploads.GalleryViewModel
@{
    ViewBag.Title = "New Image " + Settings.COMPANY_ABBR;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string companyName = Settings.COMPANY_NAME;
}

<section class="bg-theme-colored1">

    <div class="container pt-50">
        <div class="section-content">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="text-white">Gallery | New</h2>
                  <p class="lead text-white">Add a new Photo</p>
                    @Html.Bootstrap().ActionLinkButton("Back", "Index", "GalleryUpload").Class("btn btn-theme-colored1 btn-xs").AppendIcon("fa fa-home")
                </div>
            </div>
        </div>
    </div>
</section>

<section class="" data-tm-bg-color="#ecf0f1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tm-sc tm-sc-section-title section-title section-title-style1 mb-10">
                    <div class="title-wrapper">
                        <h2 class="title ">
                            <span class="">Our</span>
                            <span class="text-theme-colored1">Photos</span>
                        </h2>
                        <div class="title-seperator-line"></div>
                    </div>
                </div>
                @*<div class="paragraph">
                        <p class="lead">
                            ACRES has a unique personal touch and encourages sponsors to build relationships with the beneficiaries, exchanging letters and some have even been to Uganda to visit!
                        </p>
                    </div>*@
                <div class="row">


                    @using (Html.BeginForm("New", "GalleryUpload", FormMethod.Post, new { enctype = "multipart/form-data", id = "contact_form", name = "contact_form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="row">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.Bootstrap().TextBoxFor(m => m.Title).Placeholder("Please enter image caption").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GalleryImages)
                                    @Html.TextBoxFor(p => p.GalleryImages, new { @multiple = "multiple", type = "file", id = "file-0", required = "" })
                                    @Html.ValidationMessageFor(m => m.GalleryImages, "", new { @class = "text-danger" })

                                    @*@Html.TextBoxFor(p => p.GalleryImage, new { @multiple = "multiple", type = "file", id = "file-0" })*@

                                </div>
                            </div>

                        </div>


                        <div class="form-group">
                            @Html.Bootstrap().SubmitButton().Class("btn btn-dark btn-theme-colored1 btn-flat").Text("Upload")                           
                        </div>

                    }


                </div>
            </div>

        </div>
    </div>
</section>




@section Scripts {
}



